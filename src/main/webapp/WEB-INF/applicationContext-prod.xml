<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd"
       profile="prod">

    <bean class="java.net.URI" id="dbUrl">
        <constructor-arg value="#{systemEnvironment['DATABASE_URL']}"/>
    </bean>

    <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource">
        <property name="url" value="#{ 'jdbc:postgresql://' + @dbUrl.getHost() + ':' + @dbUrl.getPort() + @dbUrl.getPath() }"/>
        <property name="username" value="#{ @dbUrl.getUserInfo().split(':')[0] }"/>
        <property name="password" value="#{ @dbUrl.getUserInfo().split(':')[1] }"/>
    </bean>

    <bean id="jdbcProductDao" class="com.obolonyk.onlineshop.dao.jdbc.JdbcProductDao">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <bean id="jdbcUserDao" class="com.obolonyk.onlineshop.dao.jdbc.JdbcUserDao">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <bean id="productService" class="com.obolonyk.onlineshop.services.ProductService">
        <property name="jdbcProductDao" ref="jdbcProductDao"/>
    </bean>

    <bean id="userService" class="com.obolonyk.onlineshop.services.UserService">
        <property name="jdbcUserDao" ref="jdbcUserDao"/>
    </bean>

    <bean id="securityService" class="com.obolonyk.onlineshop.web.security.service.DefaultSecurityService">
        <property name="userService" ref="userService"/>
    </bean>

    <bean id="cartService" class="com.obolonyk.onlineshop.services.CartService"/>

</beans>