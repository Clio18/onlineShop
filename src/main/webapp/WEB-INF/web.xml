<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <listener>
        <listener-class>com.obolonyk.onlineshop.web.context.ApplicationContextListener</listener-class>
    </listener>

    <!-- ProductsServlet -->
    <servlet>
        <servlet-name>ProductsServlet</servlet-name>
        <servlet-class>com.obolonyk.onlineshop.web.servlets.product.ProductsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ProductsServlet</servlet-name>
        <url-pattern>/products</url-pattern>
    </servlet-mapping>

    <!-- AddProductServlet -->
    <servlet>
        <servlet-name>AddProductServlet</servlet-name>
        <servlet-class>com.obolonyk.onlineshop.web.servlets.product.AddProductServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddProductServlet</servlet-name>
        <url-pattern>/products/add</url-pattern>
    </servlet-mapping>

    <!-- RemoveProductServlet  -->
    <servlet>
        <servlet-name>RemoveProductServlet</servlet-name>
        <servlet-class>com.obolonyk.onlineshop.web.servlets.product.RemoveProductServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RemoveProductServlet</servlet-name>
        <url-pattern>/products/delete</url-pattern>
    </servlet-mapping>

    <!-- UpdateProductServlet -->
    <servlet>
        <servlet-name>UpdateProductServlet</servlet-name>
        <servlet-class>com.obolonyk.onlineshop.web.servlets.product.UpdateProductServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UpdateProductServlet</servlet-name>
        <url-pattern>/products/update</url-pattern>
    </servlet-mapping>

    <!-- SearchProductsServlet -->
    <servlet>
        <servlet-name>SearchProductsServlet</servlet-name>
        <servlet-class>com.obolonyk.onlineshop.web.servlets.product.SearchProductsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SearchProductsServlet</servlet-name>
        <url-pattern>/products/search</url-pattern>
    </servlet-mapping>

    <!-- LoginServlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.obolonyk.onlineshop.web.servlets.auth.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- RegistrationServlet -->
    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>com.obolonyk.onlineshop.web.servlets.auth.RegistrationServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <!-- LogOutServlet -->
    <servlet>
        <servlet-name>LogOutServlet</servlet-name>
        <servlet-class>com.obolonyk.onlineshop.web.servlets.auth.LogOutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LogOutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <!-- AddToCartServlet -->
    <servlet>
        <servlet-name>AddToCartServlet</servlet-name>
        <servlet-class>com.obolonyk.onlineshop.web.servlets.cart.AddToCartServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddToCartServlet</servlet-name>
        <url-pattern>/product/cart</url-pattern>
    </servlet-mapping>

    <!-- CartServlet -->
    <servlet>
        <servlet-name>CartServlet</servlet-name>
        <servlet-class>com.obolonyk.onlineshop.web.servlets.cart.CartServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CartServlet</servlet-name>
        <url-pattern>/products/cart</url-pattern>
    </servlet-mapping>

    <!-- UpdatePlusCartServlet -->
    <servlet>
        <servlet-name>UpdatePlusCartServlet</servlet-name>
        <servlet-class>com.obolonyk.onlineshop.web.servlets.cart.UpdatePlusCartServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UpdatePlusCartServlet</servlet-name>
        <url-pattern>/products/cart/update/plus</url-pattern>
    </servlet-mapping>

    <!-- UpdateMinusCartServlet -->
    <servlet>
        <servlet-name>UpdateMinusCartServlet</servlet-name>
        <servlet-class>com.obolonyk.onlineshop.web.servlets.cart.UpdateMinusCartServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UpdateMinusCartServlet</servlet-name>
        <url-pattern>/products/cart/update/minus</url-pattern>
    </servlet-mapping>

    <!-- DeleteCartServlet -->
    <servlet>
        <servlet-name>DeleteCartServlet</servlet-name>
        <servlet-class>com.obolonyk.onlineshop.web.servlets.cart.DeleteCartServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeleteCartServlet</servlet-name>
        <url-pattern>/products/cart/delete</url-pattern>
    </servlet-mapping>

    <!-- UserFilter -->
    <filter>
        <filter-name>UserFilter</filter-name>
        <filter-class>com.obolonyk.onlineshop.web.security.filters.UserFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UserFilter</filter-name>
        <url-pattern>/products</url-pattern>
        <url-pattern>/products/search</url-pattern>
        <url-pattern>/logout</url-pattern>
        <url-pattern>/products/cart/*</url-pattern>
        <url-pattern>/product/cart</url-pattern>
    </filter-mapping>

    <!-- AdminFilter -->
    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>com.obolonyk.onlineshop.web.security.filters.AdminFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/products/delete</url-pattern>
        <url-pattern>/products/update</url-pattern>
        <url-pattern>/products/add</url-pattern>
    </filter-mapping>
</web-app>