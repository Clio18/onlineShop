<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <listener>
        <listener-class>com.obolonyk.onlineshop.web.context.ApplicationContextListener</listener-class>
    </listener>

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>onlineShop</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>onlineShop</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <!-- UserFilter -->
    <filter>
        <filter-name>UserFilter</filter-name>
        <filter-class>com.obolonyk.onlineshop.web.security.filters.UserFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UserFilter</filter-name>
        <url-pattern>/products</url-pattern>
        <url-pattern>/products/search</url-pattern>
        <url-pattern>/logout</url-pattern>
        <url-pattern>/products/cart/*</url-pattern>
        <url-pattern>/product/cart</url-pattern>
    </filter-mapping>

    <!-- AdminFilter -->
    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>com.obolonyk.onlineshop.web.security.filters.AdminFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/products/delete</url-pattern>
        <url-pattern>/products/update</url-pattern>
        <url-pattern>/products/add</url-pattern>
    </filter-mapping>
</web-app>